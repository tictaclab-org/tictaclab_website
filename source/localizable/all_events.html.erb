---
title: Events | Techies Lab
image: featured/web_design.png
layout: event
---

<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <%= image_tag current_page.data.image, class: "img-responsive featured-image" %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <h3 class="section-title"><%= t('.workshops.upcoming') %></h3>
      <div class="section-title-border"></div>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-12">
     <!--  <p class="lead">
        <strong><%= t('about.lead.drop') %></strong> <%= t('about.lead.text') %>
      </p>
      <p><%= t('about.intro') %>
      </p> -->
      <div class="row">
        <% data.webdesign_events.each do |event| %>
            <div class="col-sm-12 feature-box-container">
              <div class="feature-box wow fadeInDown">
                <div class="icon">
                  <i class="fa fa-newspaper-o"></i>
                </div>
                <div class="description">
                  <h4><%= t(event.title) %></h4>
                  <p id="description"><%= t(event.description) %></p>
                  <p><strong><%= t(event.date_drop) %></strong> <%= t(event.date_text) %></p>
                  <p><strong><%= t(event.location_drop) %></strong> <%= t(event.location_text) %></p>
                  <p><strong><%= t(event.age_drop) %></strong> <%= t(event.age_text) %></p>
                  <p><strong><%= t(event.price_drop) %></strong> <%= t(event.price_text) %></p>
<!--                   <p><em><%= t(event.price_why) %></em></p> -->
                  <p><%= link_to t(event.button), t(event.file), class: "btn btn-theme", target: "_blank" %></p>
                  <!-- <p><button class="btn btn-theme">No longer available</button></p> -->
                </div>
              </div>
            </div>
          <% end %>
     </div>
    </div>
  </div>

